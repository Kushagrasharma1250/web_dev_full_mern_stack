{
  "name": "mern-app",
  "version": "1.0.0",
  "description": "Full-stack MERN application",
  "main": "server/index.js",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "postbuild": "echo 'Build complete'",
    "prod": "NODE_ENV=production npm start"
  },
  "keywords": ["MERN", "MongoDB", "Express", "React", "Node.js"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1"
  }
}
