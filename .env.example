# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/mern-app
# For production (MongoDB Atlas):
# MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/mern-app?retryWrites=true&w=majority

# JWT Secret (use strong random string in production)
JWT_SECRET=your_jwt_secret_key_here

# Node Environment
NODE_ENV=development
# NODE_ENV=production (for production)

# Server Port
PORT=5000

# React API URL (for development)
REACT_APP_API_URL=http://localhost:5000

# Frontend URL (for production/CORS)
FRONTEND_URL=http://localhost:3000
# FRONTEND_URL=https://your-app-name.onrender.com (for production)

